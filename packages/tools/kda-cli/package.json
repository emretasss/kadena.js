{
  "name": "kda-cli",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "bin": "lib/cli.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "kda": "node lib/cli.js",
    "lint-staged": "lint-staged",
    "test": "prettier --check . && ava"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write -u"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "ava": {
    "extensions": {
      "ts": "module",
      "tsx": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "dependencies": {
    "@inkjs/ui": "^1.0.0",
    "@kadena/cryptography-utils": "workspace:*",
    "ink": "^4.1.0",
    "meow": "^11.0.0",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@kadena-dev/eslint-config": "workspace:*",
    "@kadena-dev/eslint-plugin": "workspace:*",
    "@kadena-dev/heft-rig": "workspace:*",
    "@rushstack/eslint-config": "~2.6.2",
    "@rushstack/heft": "~0.46.1",
    "@types/node": "^16.0.0",
    "@types/react": "^18.0.30",
    "ava": "^5.2.0",
    "chalk": "^5.2.0",
    "eslint": "^8.15.0",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-plugin-react": "~7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "ink-testing-library": "^3.0.0",
    "prettier": "^2.8.5",
    "ts-node": "~10.8.2",
    "typescript": "~4.7.0"
  },
  "engines": {
    "node": ">=16"
  }
}
